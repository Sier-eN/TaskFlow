<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="Fragments.BamGioFragment"
    >

    <!-- Đồng hồ chính -->

    <!-- Danh sách các lần dừng -->
    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/tvTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="00:00.00"
        android:textColor="@color/mautrangnhathon"
        android:textSize="48sp"
        android:textStyle="bold" />

    <ScrollView
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:layout_marginBottom="24dp">

        <LinearLayout
            android:id="@+id/layoutLapTimes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal" />
    </ScrollView>

    <!-- Các nút điều khiển -->
    <LinearLayout
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnStartPause"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Bắt đầu"
            android:backgroundTint="@color/green_dark"
            android:textColor="@android:color/white"
            android:layout_marginEnd="16dp"
            android:padding="10dp" />

        <Button
            android:id="@+id/btnLap"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Lưu mốc"
            android:backgroundTint="@color/mauxanh"
            android:textColor="@android:color/white"
            android:layout_marginEnd="16dp"
            android:padding="10dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnReset"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Đặt lại"
            android:backgroundTint="@android:color/holo_red_light"
            android:textColor="@android:color/white"
            android:padding="10dp" />
    </LinearLayout>

</LinearLayout>
