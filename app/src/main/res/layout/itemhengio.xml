<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_margin="10dp"
    android:background="@color/maunensanghon"
    android:padding="16dp">

    <!-- Nút X ở góc phải trên -->
    <ImageView
        android:id="@+id/btnClose"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/xoa"
        app:tint="@color/mautrangnhathon"
        android:contentDescription="Đóng"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Vòng tròn đếm ngược -->
    <FrameLayout
        android:id="@+id/circleContainer"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ProgressBar
            android:id="@+id/progressCircle"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:indeterminate="false"
            android:max="60"
            android:progress="30"
            android:progressDrawable="@drawable/circle_progress" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="00:01:30"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/mautrangnhathon" />
    </FrameLayout>

    <!-- Thông tin hẹn giờ -->

    <!-- Nút +1:00 -->

    <TextView
        android:id="@+id/tvTimerInfo"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Bộ hẹn giờ: 0h 1m 30s"
        android:textColor="@color/mautrangnhathon"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/btnAddTime"
        app:layout_constraintEnd_toEndOf="@+id/circleContainer"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/circleContainer"
        app:layout_constraintTop_toTopOf="@+id/circleContainer"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnAddTime"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:text="+1:00"
        android:textColor="@color/mautrangnhathon"
        android:backgroundTint="@color/green_dark"
        app:layout_constraintTop_toTopOf="@id/circleContainer"
        app:layout_constraintBottom_toTopOf="@id/btnPlay"
        app:layout_constraintStart_toEndOf="@id/circleContainer"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"/>

    <!-- Nút Play/Pause -->
    <ImageView
        android:id="@+id/btnPlay"
        android:layout_width="90dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_rounded"
        android:src="@drawable/play"
        app:tint="@color/mautrangnhathon"
        android:contentDescription="Play"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/btnAddTime"
        app:layout_constraintBottom_toTopOf="@id/btnReset"
        app:layout_constraintStart_toStartOf="@id/btnAddTime"
        app:layout_constraintEnd_toEndOf="@id/btnAddTime"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <!-- Nút Reset -->
    <ImageView
        android:id="@+id/btnReset"
        android:layout_width="90dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_rounded"
        android:src="@drawable/reset"
        app:tint="@color/mautrangnhathon"
        android:contentDescription="Reset"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@id/circleContainer"
        app:layout_constraintTop_toBottomOf="@id/btnPlay"
        app:layout_constraintStart_toStartOf="@id/btnAddTime"
        app:layout_constraintEnd_toEndOf="@id/btnAddTime"/>

</androidx.constraintlayout.widget.ConstraintLayout>
